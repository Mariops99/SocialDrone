<div class="box">
  <h5 class="title is-5">Filight information:</h5>
  <form action="/saveFlight" method="post">
    <input type="hidden" name="XLOCATOR" value="<%= XLOCATOR %>">

    <div class="field">
      <label class="label">UAS Identification:</label>
      <div class="control has-icons-left">
          <input name="uas" type="text" class="input" value="<%= data.pilotData.uasOperator %>" disabled>
          <span class="icon is-small is-left">
              <i class="fa fa-user"></i>
          </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Drone Used:</label>
      <div class="control has-icons-left">
        <div class="select is-fullwidth">
          <select>
            <% for (let drone of data.droneData) { %>
              <option value="<%= drone.serialNumber %>"><%= drone.brandName %> <%= drone.modelName %> | <%= drone.serialNumber %></option>
            <% } %>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label">Location:</label>
      <div class="control has-icons-left">
          <input name="locationName" type="text" class="input" placeholder="Madrid (Spain)" required>
          <span class="icon is-small is-left">
              <i class="fa fa-globe"></i>
          </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Time:</label>
      <div class="control has-icons-left">
          <input name="flightTime" type="text" class="input" placeholder="15:00" required>
          <span class="icon is-small is-left">
              <i class="fa fa-clock"></i>
          </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Max Altitude Reached:</label>
      <div class="control has-icons-left">
          <input name="maxAltitude" type="text" class="input" placeholder="120" required>
          <span class="icon is-small is-left">
              <i class="fa fa-ruler"></i>
          </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Max Distance Reached:</label>
      <div class="control has-icons-left">
          <input name="maxDistance" type="text" class="input" placeholder="340" required>
          <span class="icon is-small is-left">
              <i class="fa fa-ruler"></i>
          </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Flight Time:</label>
      <div class="control has-icons-left">
          <input name="flightTimeDuration" type="text" class="input" placeholder="95" required>
          <span class="icon is-small is-left">
              <i class="fa fa-clock"></i>
          </span>
      </div>
    </div> <br>
 
    <input type="hidden" id="isPublic" name="isPublic">

    <button type="submit" onclick="changePrivate()"  class="button is-fullwidth">Save on private</button> <br>
    <button type="submit" onclick="changePublic()" class="button is-success is-fullwidth">Save & Share</button>
  </form>
</div>